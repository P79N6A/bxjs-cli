{
  "version": "1.0.0",
  "compilerOptions": {
    "baseUrl": "./",                                                /* Base directory to resolve non-absolute module names. */
    "paths": {"@app/*": ["./app/*"],"@test/*": ["./test/*"]},       /* A series of entries which re-map imports to lookup locations relative to the 'baseUrl'. */
    "lib": [
      "es5",
      "es6"
    ],
    "outDir": "./",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "stripInternal": true,
    "pretty": true,
    "strictNullChecks": false,
    "noUnusedLocals": false
  },
  "filesGlob": [
    "./global.d.ts"
  ],
  "exclude": [
    "docker",
    "dist",
    "node_modules"
  ]
}
